<style type="text/css">
  .hidden.menu {
    display: none;
  }

  .masthead.segment {
    min-height: 700px;
    padding: 1em 0em;
  }

  .masthead .logo.item img {
    margin-right: 1em;
  }

  .masthead .ui.menu .ui.button {
    margin-left: 0.5em;
  }

  .main.masthead h1.ui.header {
    margin-top: 3em;
    margin-bottom: 0em;
    font-size: 4em;
    font-weight: bold;
  }

  .main.masthead h2 {
    font-size: 1.7em;
    font-weight: normal;
  }

  .sub.masthead h1.ui.header {
    margin-top: 1em;
    margin-bottom: 0em;
    font-size: 3em;
    font-weight: bold;
  }

  .sub.masthead h2 {
    font-size: 1em;
    font-weight: normal;
  }

  .ui.vertical.stripe {
    padding: 8em 1em;
  }

  .ui.vertical.stripe h3 {
    font-size: 2em;
  }

  .ui.vertical.stripe .button+h3,
  .ui.vertical.stripe p+h3 {
    margin-top: 3em;
  }

  .ui.vertical.stripe .floated.image {
    clear: both;
  }

  .ui.vertical.stripe p {
    font-size: 1.33em;
  }

  .ui.vertical.stripe .horizontal.divider {
    margin: 3em 0em;
  }

  .quote.stripe.segment {
    padding: 0em;
  }

  .quote.stripe.segment .grid .column {
    padding-top: 5em;
    padding-bottom: 5em;
  }

  .footer.segment {
    padding: 5em 0em;
  }

  .secondary.pointing.menu .toc.item {
    display: none;
  }

  .ui.steps .step.completed>.icon:before,
  .ui.ordered.steps .step.completed:before {
    color: #388363;
  }

  .button.primary {
    background: #388363 !important;
  }

  @media only screen and (max-width: 700px) {
    .ui.fixed.menu {
      display: none !important;
    }

    .secondary.pointing.menu .item,
    .secondary.pointing.menu .menu {
      display: none;
    }

    .secondary.pointing.menu .toc.item {
      display: block;
    }

    .masthead.segment {
      min-height: 350px;
    }

    .main.masthead h1.ui.header {
      font-size: 2.8em;
      margin-top: 1.5em;
    }

    .main.masthead h2 {
      margin-top: 0.5em;
      font-size: 1em;
    }

    .sub.masthead h1.ui.header {
      font-size: 2.5em;
      margin-top: 1.3em;
    }

    .sub.masthead h2 {
      margin-top: 0.5em;
    }
  }
</style>
<script>
  // For University Theme Color
  function changePrimaryColor(color) {
    $('.primary').attr("style",'color:' + color + ' !important');
    $('a.active.item').attr("style",'color:' + color + ' !important; border-color:' + color +' !important');
  }
  function getColorByUnivName(univ) {
    if(univ == "CUK" || univ.includes("가톨릭대")) return "#003594";
    if(univ == "KU" || univ.includes("건국대")) return "#036b3f";
    if(univ == "KHU" || univ.includes("경희대")) return "#9d2235";
    if(univ == "KRU" || univ.includes("고려대")) return "#862633";
    if(univ == "KWU" || univ.includes("광운대")) return "#8b1f12";
    if(univ == "KMU" || univ.includes("국민대")) return "#2864ae";

    if(univ == "DKU" || univ.includes("단국대")) return "#245ca1";
    if(univ == "DGU" || univ.includes("동국대")) return "#cb6015";

    if(univ == "MJU" || univ.includes("명지대")) return "#10336c";

    if(univ == "SYU" || univ.includes("삼육대")) return "#5389c6";
    if(univ == "SMU" || univ.includes("상명대")) return "#1f519b";
    if(univ == "SGU" || univ.includes("서강대")) return "#B0232A";
    if(univ == "SKU" || univ.includes("서경대")) return "#71bf44";
    if(univ == "SNU" || univ.includes("서울대")) return "#20408e";
    if(univ == "SeoulTech" || univ.includes("서울과기대")) return "#00205b";
    if(univ == "UOS" || univ.includes("서울시립대")) return "#151f6d";
    if(univ == "SKKU" || univ.includes("성균관대")) return "#8DC63F";
    if(univ == "SJU" || univ.includes("세종대")) return "#ba0c2f";
    if(univ == "SSU" || univ.includes("숭실대")) return "#00587c";


    if(univ == "YSU" || univ.includes("연세대")) return "#16407d";

    if(univ == "CAU" || univ.includes("중앙대")) return "#004c97";

    if(univ == "HUFS" || univ.includes("한국외국어대")) return "#00677F";
    if(univ == "HSU" || univ.includes("한성대")) return "#62b5e5";
    if(univ == "HYU" || univ.includes("한양대") ) return "#003c71";
    if(univ == "HIU" || univ.includes("홍익대")) return "#002c62";


    return "#388363";

  }

  $(document).ready(function() {
    // fix menu when passed
    $('.masthead')
      .visibility({
        once: false,
        onBottomPassed: function() {
          $('.fixed.menu').transition('fade in');
        },
        onBottomPassedReverse: function() {
          $('.fixed.menu').transition('fade out');
        }
      });

    $('.login_btn').click(function() {
      $('.login_modal').modal('show');
    });
    $('.ui.rating').rating();
    $('.ui.dropdown').dropdown();

    // create sidebar and attach to menu open
    $('.ui.sidebar').sidebar('attach events', '.toc.item');
  });
</script>
